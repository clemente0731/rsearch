{
  "manifest_version": 3,
  "name": "RSearch",
  "version": "1.0.0",
  "description": "Advanced search tool with regex and multi-keyword support for web pages",
  "author": "clemente0731",
  "homepage_url": "https://github.com/clemente0731/rsearch",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
